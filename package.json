  },
  "keywords": [
    "event-emitter",
    "events",
    "emitter"
  ],
  "dependencies": {
    "@types/lodash": "^4.14.52",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "ava-spec": "^1.1.0",
    "nyc": "^10.1.2",
